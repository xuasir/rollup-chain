{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "moduleResolution": "node",
    "isolatedModules": true
  },
  "exclude": ["**/__test__/**/*", "**/node_modules/**/*", "dist/**/*"],
  "include": ["src/**/*"]
}
